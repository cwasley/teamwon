<html>
<head>
	<title>Grocery List</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"
		charset="utf-8">

	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/allpages.css" rel="stylesheet">

</head>
<body>
	<div class="container">
		<h1>Grocery List</h1>

		<!-- Headers -->
		<h5><a href="/">Go Home</a></h5>

		<h3> Grocery List </h3>
		<ul>
			<li><a href="items/bananas"> Bananas </a> <p class="tobuy"> Quantity: 3 (+/-)</p> </li>
			<li> Milk<p class="tobuy"> Quantity: 1 gal (+/-)</p></li>
			<li> Eggs<p class="tobuy"> Quantity: 2 dozen (+/-)</p></li>
		</ul></br>
		<div class="addForm" style="clear: both;">
			<form id="addGroceryItemForm" role="form" method="get">
				<h5> Add a grocery item</h5>
					<div class="form-group">
	      		<label for="name">Name:</label>
	      		<input type="text" class="form-control" id="name" placeholder="Name" name="name">
	    		</div>
	    		<div class="form-group quantity">
	      		<label for="quantity">Quantity:</label>
	      		<input type="text" class="form-control" id="quantity" placeholder="Quantity" name="quantity">
						<input type="text" class="form-control" id="units" placeholder="Units" name="units">
	    		</div>
	    		<input type="submit" id="submit" class="btn btn-default" value="Add the item"></input>
				</form>
			</div>
		</div>

  <script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/grocery.js"></script>
</body>
</html>
