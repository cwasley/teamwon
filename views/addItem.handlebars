<html>
<head>
	<title>Add Item </title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"
		charset="utf-8">

	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">

</head>
<body>
	<div class="container">
		<h1>Add Item</h1>

		<h5><a href="/grocery">Back to Grocery List</a></h5>

		<div class="addForm" style="clear: both;">
			<form id="addGroceryItemForm" role="form" method="get" action="/addForm">
					<div class="form-group">
	      		<label for="name">Name:</label>
	      		<input type="text" class="form-control" id="name" placeholder="Name" name="name">
	    		</div>
	    		<div class="form-group quantity">
	      		<label for="quantity">Quantity:</label>
	      		<input type="text" class="form-control" id="quantity" placeholder="Quantity" name="quantity">
						<input type="text" class="form-control" id="units" placeholder="Units" name="units">
	    		</div>
	    		<input type="submit" id="submit" class="btn btn-default" value="Add"></input>
	    		<input type="reset" id="clear" class="btn btn-default" value="Clear"></input>


			</form>
		</div>
	</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/addItem.js"></script>
</body>
</html>
